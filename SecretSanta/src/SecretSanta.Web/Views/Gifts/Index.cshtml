@model List<GiftViewModel>

@{int counter = 0;}
<div class = "grid">
<div>
@foreach(var groupViewModel in Model) {
    <section class = "grid">
         <a asp-action="Edit" asp-route-id=@counter>@groupViewModel.Title</a><form asp-action="Delete" onclick ="return(confirmdelete())" asp-route-id=@counter method="post"><button class = "button"><span>X</span></button></form>
        @{counter++;}
    </section>
}
</div>
</div>
<a asp-action="Create">Create</a>
<script type="text/javascript">
  function confirmdelete()
  {
      var booltr = confirm("Ary you sure you want to delete this user?");
      if(booltr)
      {
         return true;
      }
      else{
        return false;
      }
      
  }
</script>


<style>
.grid {

    display: inline-block;
    margin: 0 1em;
    flex-grow: 1;
    width: calc(25% - 2em);
}
}</style>

<style>
.button {
  border-radius: 1px;
  background-color: #FF00FF;
  border: none;
  color: #FFFFFF;
  text-align: left;
  font-size: 28px;
  padding: 20px;
  width: 30px;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;
}

.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.button span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.button:hover span {
  padding-right: 2px;
}

.button:hover span:after {
  opacity: 1;
  right: 0;
}
</style>
