@model List<NameViewModel>

@{int counter = 0;}

@foreach(var name in Model) {
    <section>
        @name.FirstName @name.LastName  <a asp-controller="Name" asp-action="Edit" asp-route-id=@counter>Edit</a>
        <form asp-controller="Name" asp-action="Delete" asp-route-id=@counter method="post"><button>X</button></form>
        @{counter++;}
    </section>
}
<a asp-controller="Name" asp-action="Create">Create</a>