@model GiftViewModel

<div asp-validation-summary='All'></div>
<div class="flex mb-6">
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Title"></label>
        </div>
        <div class="w-2/3">
            <input class="border border-indigo-300 rounded-md w-full" type="text" asp-for="Title" />
        </div>
    </div>
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Description"></label>
        </div>
        <div class="w-2/3">
            <input class="border border-indigo-300 rounded-md w-full" type="text" asp-for="Description" />
        </div>
    </div>
</div>
<div>
    <label asp-for="URL">URL(must include https://)</label>: <input type="url" asp-for="URL" />
</div>
<div class="grid grid-cols-2">
    <div>
        <label asp-for="Priority" class="text-gray-500 font-bold text-right"></label>
        <select asp-for="Priority">
            <option value=1 selected>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
            <option value=5>5</option>
        </select>
    </div>
    <div>
        <label asp-for="UserID"></label>
        <select asp-for="UserID" asp-items="@(new SelectList(MockData.Name, "Id", "FullName"))">
            <option>Please select one</option>
        </select>
    </div>
</div>