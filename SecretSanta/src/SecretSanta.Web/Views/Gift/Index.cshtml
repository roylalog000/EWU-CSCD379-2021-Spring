@model List<GiftViewModel>

@{int counter = 0;}

@foreach(var Gift in Model) {
    <section>
        @Gift.Title @Gift.Description @Gift.URL @Gift.Priority UserID:@Gift.UserID  <a asp-controller="Gift" asp-action="Edit" asp-route-id=@counter>Edit</a><form asp-controller="Gift" asp-action="Delete" asp-route-id=@counter method="post"><button>X</button></form>
        @{counter++;}
    </section>
}
