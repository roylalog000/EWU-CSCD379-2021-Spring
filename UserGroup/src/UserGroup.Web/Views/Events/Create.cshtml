<section x-data="UserGroup.createOrUpdateEvent()">
    @await Html.PartialAsync("_CreateOrEdit")
    <button class="border-2 bg-indigo-400 border-indigo-800 hover:bg-indigo-600 py-2 px-4 rounded-xl mr-3" @@click="create()">Create</button>
    <a class="inline-block border-2 bg-white border-indigo-400 hover:border-indigo-600 py-2 px-4 rounded-xl" asp-controller="Events" asp-action="Index">Cancel</a>
</section>