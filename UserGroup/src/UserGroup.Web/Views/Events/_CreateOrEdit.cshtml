@model EventViewModel

<div asp-validation-summary='All'></div>
<div class="flex mb-6">
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Title"></label>
        </div>
        <div class="w-2/3">
            <input class="border border-indigo-300 rounded-md w-full" type="text" asp-for="Title" />
        </div>
    </div>
    <div class="flex w-1/2">
        <div class="w-1/3">
            <label class="text-gray-500 font-bold text-right" asp-for="Description"></label>
        </div>
        <div class="w-2/3">
            <input class="border border-indigo-300 rounded-md w-full" type="text" asp-for="Description" />
        </div>
    </div>
</div>
<div>
    <label asp-for="Date"></label>: <input type="text" asp-for="Date" />
</div>
<div class="grid grid-cols-2">
    <div>
        <label asp-for="Location" class="text-gray-500 font-bold text-right"></label>
        <input type="text" class="w-full" asp-for="Location" />
    </div>
    <div>
        <label asp-for="SpeakerId"></label>
        <select asp-for="SpeakerId" asp-items="@(new SelectList(MockData.Speakers, "Id", "FullName"))">
            <option>Please select one</option>
        </select>
    </div>
</div>
