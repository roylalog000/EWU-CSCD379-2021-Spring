<section x-data="UserGroup.createOrUpdateEvent()" x-init="loadData()">
    @await Html.PartialAsync("_CreateOrEdit")
    <div>
        <span class="text-red-500" x-text="removeError"></span>
    </div>
    <template x-for="speaker in event.speakers" x-if="event?.speakers != null">
        <div>
            <span x-text="`${speaker.firstName} ${speaker.lastName}`"></span>
            <button class="-mt-6" @@click.prevent="removeSpeaker(event, speaker)"><i class="fas fa-trash text-gray-700 hover:text-red-700"></i></button>
        </div>
    </template>
    <button class="border-2 bg-indigo-400 border-indigo-800 hover:bg-indigo-600 py-2 px-4 rounded-xl mr-3" @@click="update()">Update</button>
    <a class="inline-block border-2 bg-white border-indigo-400 hover:border-indigo-600 py-2 px-4 rounded-xl" asp-controller="Events" asp-action="Index">Cancel</a>
</section>