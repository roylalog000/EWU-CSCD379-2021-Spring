@model SpeakerViewModel

<form asp-controller="Speakers" asp-action="Create" method="post">
    @await Html.PartialAsync("_CreateOrEdit")
    <button class="border-2 bg-indigo-400 border-indigo-800 hover:bg-indigo-600 py-2 px-4 rounded-xl mr-3">Create</button>
    <a class="inline-block border-2 bg-white border-indigo-400 hover:border-indigo-600 py-2 px-4 rounded-xl" asp-controller="Speakers" asp-action="Index">Cancel</a>
</form>