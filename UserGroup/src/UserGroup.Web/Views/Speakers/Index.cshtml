@model List<SpeakerViewModel>

@{int counter = 0;}

@foreach(var speaker in Model) {
    <section>
        @speaker.FirstName @speaker.LastName - @speaker.EmailAddress <a asp-controller="Speakers" asp-action="Edit" asp-route-id=@counter>Edit</a>
        @{counter++;}
    </section>
}
<a asp-controller="Speakers" asp-action="Create">Create</a>